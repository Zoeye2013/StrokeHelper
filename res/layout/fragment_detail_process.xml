<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/tab_door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/tab_door"
        android:gravity="center_horizontal" />
    <RadioButton
        android:id="@+id/tab_symptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/tab_symptoms"
        android:gravity="center_horizontal" />
    
    <RadioButton
        android:id="@+id/tab_nihss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:button="@null"
        android:drawableTop="@drawable/tab_nihss"
        android:gravity="center_horizontal" />
    
    <RadioButton
        android:id="@+id/tab_imaging_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:button="@null"
        android:drawableTop="@drawable/tab_imaging"
        android:gravity="center_horizontal" />

    <RadioButton
        android:id="@+id/tab_present_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:button="@null"
        android:drawableTop="@drawable/tab_present_conditions"
        android:gravity="center_horizontal" />
    
    <RadioButton
        android:id="@+id/tab_anamnesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:button="@null"
        android:drawableTop="@drawable/tab_anamnesis"
        android:gravity="center_horizontal" />

</RadioGroup>